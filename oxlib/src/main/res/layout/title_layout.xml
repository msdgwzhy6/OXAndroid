<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/titleLayout"
    android:background="@color/title_color"
    android:layout_width="match_parent"
    android:layout_height="80dip">

    <!--标题左侧部分-->
    <LinearLayout
        android:id="@+id/ll_left"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <!--返回键-->
        <ImageView
            android:id="@+id/iv_left_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@android:drawable/ic_menu_close_clear_cancel"/>
        <!--左侧图标-->
        <ImageView
            android:id="@+id/iv_left_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@android:drawable/ic_menu_camera"/>

        <!--左侧文字-->
        <TextView
            android:id="@+id/tv_left_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:ellipsize="end"
            android:text="左sdsdsdds"/>

    </LinearLayout>

    <!--标题中间部分-->
    <RelativeLayout
        android:id="@+id/rl_center"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:orientation="horizontal">
        <!--中间文字-->
        <TextView
            android:id="@+id/tv_center_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:lines="1"
            android:ellipsize="end"
            android:text="中间"/>
        <!--中间下拉箭头-->
        <ImageView
            android:id="@+id/iv_center_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_center_text"
            android:layout_alignBottom="@+id/tv_center_text"
            android:src="@android:drawable/arrow_down_float"/>

    </RelativeLayout>

    <!--标题右侧部分-->
    <LinearLayout
        android:id="@+id/ll_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:layout_alignParentRight="true">

        <!--右侧文字-->
        <TextView
            android:id="@+id/tv_right_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:ellipsize="end"
            android:text="右"/>

        <RelativeLayout
            android:id="@+id/rl_right_icon"
            android:layout_width="50dip"
            android:layout_height="50dip">

            <!--右侧图标-->
            <ImageView
                android:id="@+id/iv_right_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@android:drawable/ic_menu_camera"/>
            <!---->
            <TextView
                android:id="@+id/tv_right_pop"
                android:layout_width="18dip"
                android:layout_height="18dip"
                android:background="@drawable/shape_red_pop"
                android:lines="1"
                android:ellipsize="end"
                android:textSize="10sp"
                android:gravity="center"
                android:text="11"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

        <!--图标容器-->
        <LinearLayout
            android:id="@+id/ll_right_icon_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"/>
    </LinearLayout>

</RelativeLayout>